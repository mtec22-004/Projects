<?xml version="1.0" encoding="utf-8"?>
<!-- profile_edit_layout.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?android:attr/colorBackground">

    <!-- Back button to navigate back to the profile -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <!-- Edit Profile Title -->
    <TextView
        android:id="@+id/viewEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create User Profile"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textColor="?attr/textFillColor"
        android:textStyle="bold"
        android:layout_below="@id/backButton"
        android:layout_marginTop="16dp" />

    <!-- Edit Text Field for Name -->
    <EditText
        android:id="@+id/NameEditText"
        android:layout_width="381dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_background"
        android:layout_below="@id/viewEditProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:hint="Name"
        android:inputType="text"
        android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/NumberEditText"
        android:layout_width="378dp"
        android:layout_height="72dp"
        android:background="@drawable/bg_background"
        android:layout_below="@id/NameEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:hint="Preferred Number"
        android:inputType="text"
        android:paddingLeft="10dp"/>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NumberEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"
        android:text="Save"
        android:backgroundTint="?attr/buttonTint"
        android:textColor="@color/white"
        />
</RelativeLayout>

